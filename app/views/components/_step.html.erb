<div class="box">
    <div class="stack">
        <div class="header">
            <h2><%= title %></h2>
            <% if done %>
                <%= render 'components/tag', color: 'success', text: t('application.done') %>
                <% else %>
                <%= render 'components/tag', color: 'danger', text: t('application.to_do') %>
            <% end %>
        </div>
        <span>
            <%= text %>
        </span>
        <%= link_to cta, cta_path, class: 'btn btn--primary', data: {turbo: :false}  %>
    </div>
</div>