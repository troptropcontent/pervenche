<% flash.each do |type, msg| %>
    <div 
        class="<%= class_names('flash',  "flash--#{type}", 'disapear') %>"
        data-controller="removals"
        data-action="animationend->removals#remove"
    >
        <div class="flash__content center">
            <% if msg.is_a?(Array) %>
                <ul>
                    <% msg.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                </ul>
                <% else %>
                <%= msg %>
            <% end %>
        </div>
    </div>
<% end %>

