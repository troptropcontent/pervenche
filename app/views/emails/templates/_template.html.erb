<%= render CardComponent.new do %>
  <%= render ClusterComponent.new(justify_content: 'space-between')  do %>
    <%= render StackComponent.new(justify_content: 'center')  do %>
      <%= render TextComponent.new(text: template.name) %>
      <%= render ClusterComponent.new do %>
        <% template.tags.each do |tag| %>
          <%= render TagComponent.new(text: tag.to_s) %>
        <% end %>
      <% end %>
    <% end %>
    <%= render LinkComponent.new(
      path: emails_template_path(id: template.class.template_id),
      text: 'lien'
      ) %>
    
  <% end %>
<% end %>