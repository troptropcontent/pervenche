<div class="container stack">
    <section class="stack stack--l">
      <h2 class='text__align--center'><%= t('devise.passwords.edit.title') %></h2>
      <%= simple_form_for resource, 
                          as: resource_name, 
                          url: password_path(resource_name),
                          method: :put,
                          html: {
                            class: "form form--column stack stack--l",
                            data: { turbo: false }
                          } do |f| %>

        <% if resource.errors.any? %>
          <div class="error-message">
            <%= resource.errors.full_messages.to_sentence.capitalize %>
          </div>
        <% end %>

        <div class="form_group stack stack--s">
            <p ><%= t('devise.passwords.edit.inputs.password.label') %></p >
            <%= f.input :password, placeholder: '', input_html: { autofocus: true } %>
        </div>
        <div class="form_group stack stack--s">
            <p ><%= t('devise.passwords.edit.inputs.password_confirmation.label') %></p >
            <%= f.input :password_confirmation, placeholder: '', input_html: { autofocus: true } %>
        </div>
         <%= f.hidden_field :reset_password_token %>
        <%= f.submit  t('devise.passwords.new.submit') , class: "btn btn--primary" %>
      <% end %>
    </section>
</div>
  
