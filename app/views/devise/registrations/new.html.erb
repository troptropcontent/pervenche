<div class="cover">
    <div class='box stack'>
      <h2 class='text__align--center'><%= t('devise.registrations.title')%></h2>
      <%= simple_form_for resource, 
                          as: resource_name, 
                          url: registration_path(resource_name),
                          method: :post,
                          html: {
                            class: "quote form form--column",
                            data: { turbo: false }
                          } do |f| %>

        <% if resource.errors.any? %>
          <div class="error-message">
            <%= resource.errors.full_messages.to_sentence.capitalize %>
          </div>
        <% end %>

        <%= f.input :email, input_html: { autofocus: true } %>
        <%= f.input :password, input_html: { autofocus: true } %>
        <%= f.input :password_confirmation, input_html: { autofocus: true } %>

        <%= f.submit "Sign in", class: "btn btn--primary" %>
      <% end %>
    </div>
</div>
