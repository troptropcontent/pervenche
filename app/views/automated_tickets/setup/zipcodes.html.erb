

<main class="grow container stack stack--no-gap">
    <section class="header">
      <% if @localisation == 'paris' %>
        <h2><%= t("views.setup.zipcodes.header.title.#{@automated_ticket.vehicle_type}") %></h2>
      <% end %>
      <% if @localisation == 'other' %>
        <h2><%= t("views.setup.zipcodes.header.title.neutral") %></h2>
      <% end %>
    </section>
    <%= render 'automated_tickets/setup/shared/form', automated_ticket: @automated_ticket, step: @step, clickable_svg_multiselect: @automated_ticket.allow_multiple_zipcodes? do |f| %>
      <% if @localisation == 'paris' %>
        <%= render 'automated_tickets/setup/zipcodes/paris', zipcodes: @automated_ticket.zipcodes || [] %>
      <% end %>
      <% if @localisation == 'other' %>
        <%= render 'automated_tickets/setup/zipcodes/other', form: f %>
      <% end %>
    <% end %>
</main>