<main class="grow container stack stack--no-gap">
    <section class="header">
      <h2><%= t('views.setup.payment_methods.header.title') %></h2>
    </section>
    <%= render 'automated_tickets/setup/shared/form', automated_ticket: @automated_ticket, step: @step do |f| %>
      <div class="form_group stack stack--xs">
        <%= f.input :payment_method_client_internal_ids, wrapper_html: {class: 'stack'} do %>
          <% @payment_methods.each do |payment_method| %>
            <%= f.label "payment_method_client_internal_ids_#{payment_method.client_internal_id}", class: 'form__input__type__picker__type' do %>
              <%= f.radio_button "payment_method_client_internal_ids", 
                                 payment_method.client_internal_id, 
                                 class: 'visually-hidden', 
                                 checked: ( @payment_methods.length == 1)
                                %>
                                
              <span class= 'clickable'>
                <h4><%=  t("views.setup.payment_methods.#{payment_method.payment_card_type}", anonymised_card_number: payment_method.anonymised_card_number ) %></h4>
              </span>
            <% end %>
          <% end %>
        <% end %>
      </div>
    <% end %>
</main>

                