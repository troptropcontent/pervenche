<turbo-frame id="automated_ticket_form_content" class="grow stack" >
  <%= render 'automated_tickets/setups/form' do |f| %>
    <div class="stack">
      <h3><%= t('views.automated_tickets.new.form.inputs.license_plate') %></h3>
        <%= f.input :license_plate, wrapper_html: {class: 'stack'} do %>
          <% @vehicles.each do |vehicle| %>
            <%= f.label "license_plate_#{vehicle[:license_plate].downcase}" do %>
              <%= f.radio_button "license_plate", vehicle[:license_plate], class: 'visually-hidden' %>
              <p class= 'form__input'><%=  vehicle[:license_plate] %></p>
            <% end %>
          <% end %>
        <% end %>

      <h3><%= t('views.automated_tickets.new.form.inputs.zipcode') %></h3>
      <%= f.input :zipcode %>
    </div>
  <% end %>
</turbo-frame>