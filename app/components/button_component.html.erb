<% if @method.nil? || @method == :get %>
    <%= link_to @path, class: classes, data: @data do %>
      <%= content %>
    <% end %>
  <% else %>
    <%= button_to @path, method: @method, params: @params, form_class: 'stack', class: ['btn', "btn--#{@color}"], data: @data  do %>
      <%= content %>
    <% end %>
<% end %>