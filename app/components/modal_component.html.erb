
<%= link_to '#', class: class_names(@link_class), data: {'action': 'click->modal#open', 'modal-id-param': @id } do %>
    <%= @link_content %>
<% end %>
<div id="<%= @id %>" class="modal" data-modal-target="modal" >
  <div class="<%= class_names('modal__content', 'stack','stack--l', 'modal__content--full-screen': @content_full_screen) %>">
    <div class="cluster cluster__justify-content--between">
      <h2><%= @title %></h2>
      <span class="modal__close" data-modal-target="closeModalBtn" data-action='click->modal#close', data-modal-id-param="<%= @id %>"><%= inline_svg 'cross.svg' %></span>
    </div>
    <%= content %>
  </div>
</div>

